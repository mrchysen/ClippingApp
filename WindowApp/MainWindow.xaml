<Window
    x:Class="WindowApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WindowApp"
    xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:plates="clr-namespace:WindowApp.Components.Plates"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="550"
    Width="900"
    Closed="Window_Closed"
    FontSize="14">
    
    <Window.Resources>
        <FontFamily
            x:Key="Font">./Fonts/#JetBrains Mono Medium
        </FontFamily>

        <Style TargetType="MenuItem">
            <Setter
                Property="Control.FontFamily"
                Value="{StaticResource Font}" />
            <Setter 
                Property="FontSize"
                Value="16"/>
        </Style>

        <Style x:Key="TabItemTextBlock">
            <Setter
                Property="Control.FontFamily"
                Value="{StaticResource Font}" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu
            DockPanel.Dock="Top"
            Height="25"
            VerticalAlignment="Top">
            <MenuItem
                Header="Файл">
                <MenuItem
                    x:Name="SaveFileMenuItem"
                    Header="Сохранить" />
                <MenuItem
                    x:Name="OpenFileMenuItem"
                    Header="Открыть" />
                <MenuItem
                    x:Name="OpenFolderMenuItem"
                    Header="Открыть папку" />
            </MenuItem>
            <MenuItem
                x:Name="ClearPlotMenuItem"
                Header="Очистить экран" />
            
            
            
            <MenuItem
                x:Name="ShowObjectsInfoMenuItem"
                Header="Координаты" />
        </Menu>
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    x:Name="RightArea"
                    Width="*" />
            </Grid.ColumnDefinitions>

            <ScottPlot:WpfPlot
                x:Name="Plot"
                Panel.ZIndex="0"
                FontFamily="{StaticResource Font}" />

            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ResizeBehavior="PreviousAndNext" />

            <DockPanel
                Grid.Column="2">
                <Border
                    BorderBrush="Black"
                    BorderThickness="1 1 0 1"
                    Padding="4"
                    Margin="4 4 0 4">
                    <ScrollViewer>
                        <StackPanel>
                            <Border
                            BorderThickness="0.5"
                            BorderBrush="Black" />

                            <TabControl>
                                <TabItem>
                                    <!-- PolygonsPlate -->
                                    <TabItem.Header>
                                        <TextBlock
                                            Margin="3"
                                            Style="{StaticResource TabItemTextBlock}">
                                                Полигоны
                                        </TextBlock>
                                    </TabItem.Header>
                                    <TabItem.Content>
                                        <plates:PolygonsPlate
                                            x:Name="PolygonsPlate" />
                                    </TabItem.Content>
                                </TabItem>
                                <TabItem>
                                    <!-- HullsPlate -->
                                    <TabItem.Header>
                                        <TextBlock
                                            Margin="3"
                                            Style="{StaticResource TabItemTextBlock}">
                                            Оболочки
                                        </TextBlock>
                                    </TabItem.Header>
                                    <TabItem.Content>
                                        <plates:HullsPlate
                                            x:Name="HullsPlate" />
                                    </TabItem.Content>
                                </TabItem>
                                <TabItem>
                                    <!-- ClusteringPlate -->
                                    <TabItem.Header>
                                        <TextBlock
                                            Margin="3"
                                            Style="{StaticResource TabItemTextBlock}">
                                            Кластеризация
                                        </TextBlock>
                                    </TabItem.Header>
                                    <TabItem.Content>
                                        <plates:ClusteringPlate
                                            x:Name="ClusteringPlate" />
                                    </TabItem.Content>
                                </TabItem>
                            </TabControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
