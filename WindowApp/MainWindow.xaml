<Window x:Class="WindowApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApp"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:bpcomp="clr-namespace:WindowApp.Components.ButtonsPopupComponent"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing"
        Closed="Window_Closed"
        FontSize="14">
    <Window.Resources>
        <FontFamily x:Key="Font">./Fonts/#JetBrains Mono Medium</FontFamily>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="RightArea" Width="*"/>
        </Grid.ColumnDefinitions>
        
        <ScottPlot:WpfPlot 
            x:Name="Plot" 
            Panel.ZIndex="0" 
            KeyDown="Plot_KeyDown"
            FontFamily="{StaticResource Font}"/>
        
        <bpcomp:ButtonsPopup 
            x:Name="ButtonsPopup"
            ButtonFontFamily="{StaticResource Font}"
            Placement="Center" 
            OnFocusBackground="GreenYellow"/>

        <DockPanel Grid.Column="1">
            <Border
                BorderBrush="Black"
                BorderThickness="1 1 0 1"
                Padding="4"
                Margin="4 4 0 4">

                <StackPanel>
                    <Border 
                        BorderThickness="0.5"
                        BorderBrush="Black" />

                    <TextBlock
                        Padding="5"
                        TextAlignment="Center"
                        FontSize="18"
                        FontFamily="{StaticResource Font}">
                        Алгоритм пересечения полигонов
                    </TextBlock>
                    
                    <Border 
                        BorderThickness="0.5"
                        BorderBrush="Black" />
                    <TextBlock
                        Padding="5"
                        FontFamily="{StaticResource Font}">
                        Только для выпуклых
                    </TextBlock>
                    <Border 
                        BorderThickness="0.5"
                        BorderBrush="Black" />

                    <RadioButton 
                        GroupName="ClippingAlg"
                        Margin="0 10 0 0"
                        DataContext="1"
                        Checked="ClipperAlgRadioButton_Checked"
                        IsChecked="True"
                        FontFamily="{StaticResource Font}">
                        Дефолт О(n^2)
                    </RadioButton>
                    <RadioButton 
                        GroupName="ClippingAlg"
                        Margin="0 10 0 10"
                        DataContext="2"
                        Checked="ClipperAlgRadioButton_Checked"
                        FontFamily="{StaticResource Font}">
                        Быстрый О(n+m)
                    </RadioButton>

                    <Border 
                        BorderThickness="0.5"
                        BorderBrush="Black" />
                    <TextBlock
                        Padding="5"
                        FontFamily="{StaticResource Font}">
                        Выпуклый + любой
                    </TextBlock>
                    <Border 
                        BorderThickness="0.5"
                        BorderBrush="Black" />
                    <RadioButton 
                        GroupName="ClippingAlg"
                        Margin="0 10 0 10"
                        DataContext="4"
                        Checked="ClipperAlgRadioButton_Checked"
                        FontFamily="{StaticResource Font}">
                        Weiler–Atherton О(n*m)
                    </RadioButton>
                    <Border 
                        BorderThickness="0.5"
                        BorderBrush="Black" />
                    <TextBlock
                        Padding="5"
                        FontFamily="{StaticResource Font}">
                        Произвольные
                    </TextBlock>
                    <Border 
                        BorderThickness="0.5"
                        BorderBrush="Black" />


                </StackPanel>
                
            </Border>
        </DockPanel>
    </Grid>
</Window>
