<Window x:Class="WindowApp.SubWindows.PolygonsDraw.PolygonDraw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApp.SubWindows.PolygonsDraw"
        mc:Ignorable="d"
        Title="PolygonDraw" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style
                TargetType="Button">
                <Setter
                    Property="Margin"
                    Value="4 5 4 5" />

                <Setter
                    Property="Padding"
                    Value="4" />

                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter 
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />

                <Setter
                    Property="Background"
                    Value="{StaticResource PrimaryColor}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid 
        Background="{StaticResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition  Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border 
            Grid.Column="0"
            Margin="2"
            BorderThickness="1"
            BorderBrush="Black"
            Background="{StaticResource BackgroundColor}">
            <Canvas 
                x:Name="WindowCanvas" 
                MouseDown="WindowCanvas_MouseDown"
                Background="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ClipToBounds="True">
            </Canvas>
        </Border>

        <GridSplitter Grid.Column="1" />

        <StackPanel
            Grid.Column="2">

            <Button
                x:Name="AddButton">
                Добавить
            </Button>
            
            <Button
                x:Name="RevertLastAddButton">
                Отменить последнее добавление
            </Button>

            <Button
                x:Name="ClearPolygonButton">
                Удалить рисуемый полигон
            </Button>

            <Border Style="{StaticResource Border}" />

            <StackPanel
                x:Name="PolygonInfo"
                Orientation="Vertical">
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
