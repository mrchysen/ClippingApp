<Window x:Class="WindowApp.SubWindows.PointsDraw.PointsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApp.SubWindows.PointsDraw"
        mc:Ignorable="d"
        Title="PointsWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Margin="2"
            BorderThickness="1"
            BorderBrush="Black"
            Background="White">
            <Canvas
                x:Name="WindowCanvas"
                MouseDown="WindowCanvas_MouseDown"
                Background="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            </Canvas>
        </Border>

        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext" />

        <StackPanel
            Grid.Column="2"
            Background="White">

            <Button
                x:Name="RevertLastAddButton"
                Padding="4"
                Margin="4 5 4 5">Отменить последнее добавление</Button>

            <Button
                x:Name="ClearPointsButton"
                Padding="4"
                Margin="4 5 4 5">Удалить все точки</Button>

            <ScrollViewer>
                <StackPanel
                    x:Name="PolygonInfo"
                    Orientation="Vertical">

                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
