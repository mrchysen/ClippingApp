<Window x:Class="WindowApp.SubWindows.PointsDraw.PointsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApp.SubWindows.PointsDraw"
        mc:Ignorable="d"
        Title="Рисование точек" Height="450" Width="800">

    <Window.DataContext>
        <local:PointsWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../../SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <Style
                TargetType="TextBlock">
                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />
            </Style>

            <Style
                TargetType="Button">
                <Setter
                    Property="Margin"
                    Value="4 5 4 5" />

                <Setter
                    Property="Padding"
                    Value="4" />

                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />

                <Setter
                    Property="Background"
                    Value="{StaticResource PrimaryColor}" />
            </Style>

        </ResourceDictionary>
    </Window.Resources>


    <Grid
        Background="{StaticResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Margin="2"
            BorderThickness="1"
            BorderBrush="Black"
            Background="{StaticResource BackgroundColor}">
            <Canvas
                x:Name="WindowCanvas"
                MouseDown="WindowCanvas_MouseDown"
                Background="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            </Canvas>
        </Border>

        <GridSplitter Grid.Column="1" />

        <StackPanel
            Grid.Column="2"
            Background="{StaticResource BackgroundColor}">

            <Button
                x:Name="RevertLastAddButton">
                Отменить последнее добавление
            </Button>

            <Button
                x:Name="ClearPointsButton">Удалить все точки</Button>

            <Border
                Style="{StaticResource Border}" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="180" />
                    <ColumnDefinition
                        Width="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    TextAlignment="Center"
                    VerticalAlignment="Center">Количество точек</TextBlock>

                <Border
                    Grid.Column="1">
                    <TextBox
                        Height="28"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Text="{Binding PointCount}"
                        Background="{StaticResource PrimaryColor}"></TextBox>
                </Border>

                <Button
                    Grid.Column="2"
                    x:Name="GeneratePointsButton">Сгенерировать случайно</Button>
            </Grid>

            <Border Style="{StaticResource Border}" />
        </StackPanel>
    </Grid>
</Window>
