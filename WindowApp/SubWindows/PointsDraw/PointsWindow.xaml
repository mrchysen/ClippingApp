<Window x:Class="WindowApp.SubWindows.PointsDraw.PointsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApp.SubWindows.PointsDraw"
        mc:Ignorable="d"
        Title="Рисование точек" Height="450" Width="800">

    <Window.DataContext>
        <local:PointsWindowViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <FontFamily
            x:Key="Font">./../../Fonts/#JetBrains Mono Medium
        </FontFamily>

        <Style
            TargetType="TextBlock">
            <Setter
                Property="FontFamily"
                Value="{StaticResource Font}" />
        </Style>

        <Style
            TargetType="Button">
            <Setter
                Property="Margin"
                Value="4 5 4 5" />

            <Setter
                Property="Padding"
                Value="4" />

            <Setter
                Property="FontFamily"
                Value="{StaticResource Font}" />
        </Style>

        <Style
            x:Key="Border"
            TargetType="Border">
            <Setter
                Property="BorderThickness"
                Value="0.5" />
            <Setter
                Property="Margin"
                Value="4" />
            <Setter
                Property="BorderBrush"
                Value="Black" />
        </Style>

    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Margin="2"
            BorderThickness="1"
            BorderBrush="Black"
            Background="White">
            <Canvas
                x:Name="WindowCanvas"
                MouseDown="WindowCanvas_MouseDown"
                Background="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            </Canvas>
        </Border>

        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext" />

        <StackPanel
            Grid.Column="2"
            Background="White">

            <Button
                x:Name="RevertLastAddButton">Отменить последнее добавление</Button>

            <Button
                x:Name="ClearPointsButton">Удалить все точки</Button>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="180" />
                    <ColumnDefinition
                        Width="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    TextAlignment="Center"
                    VerticalAlignment="Center">Количество точек</TextBlock>

                <Border
                    Grid.Column="1">
                    <TextBox
                        Height="28"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Text="{Binding PointCount}"></TextBox>
                </Border>

                <Button
                    Grid.Column="2"
                    x:Name="GeneratePointsButton">Сгенерировать случайно</Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
