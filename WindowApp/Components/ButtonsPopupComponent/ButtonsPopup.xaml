<Popup x:Class="WindowApp.Components.ButtonsPopupComponent.ButtonsPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowApp.Components.ButtonsPopupComponent"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <Popup.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="45"/>
        </Style>
    </Popup.Resources>

    <StackPanel x:Name="Box" Orientation="Vertical" Margin="2" Background="White">
    </StackPanel>
</Popup>
