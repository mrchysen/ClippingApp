<UserControl x:Class="WindowApp.Components.Plates.PolygonsPlate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowApp.Components.Plates"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Background="White">

    <UserControl.Resources>
        <FontFamily
            x:Key="Font">./../../../Fonts/#JetBrains Mono Medium
        </FontFamily>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock
            Padding="5"
            TextAlignment="Center"
            FontSize="18"
            FontFamily="{StaticResource Font}">
    Алгоритм пересечения полигонов
        </TextBlock>

        <!-- Radion Button Menu -->

        <StackPanel>
            <Border
                BorderThickness="0.5"
                BorderBrush="Black" />
            <TextBlock
                Padding="5"
                FontFamily="{StaticResource Font}">
        Только для выпуклых
            </TextBlock>
            <Border
                BorderThickness="0.5"
                BorderBrush="Black" />
            <RadioButton
                GroupName="ClippingAlg"
                Margin="0 10 0 0"
                DataContext="1"
                Checked="ClipperAlgRadioButton_Checked"
                IsChecked="True"
                FontFamily="{StaticResource Font}">
                Дефолт О(n*m)
            </RadioButton>
            <RadioButton
                GroupName="ClippingAlg"
                Margin="0 10 0 10"
                DataContext="2"
                Checked="ClipperAlgRadioButton_Checked"
                FontFamily="{StaticResource Font}">
                Быстрый О(n+m)
            </RadioButton>
            <Border
                BorderThickness="0.5"
                BorderBrush="Black" />
            <TextBlock
                Padding="5"
                FontFamily="{StaticResource Font}">
        Произвольные
            </TextBlock>
            <Border
                BorderThickness="0.5"
                BorderBrush="Black" />
            <RadioButton
                GroupName="ClippingAlg"
                Margin="0 10 0 10"
                DataContext="3"
                Checked="ClipperAlgRadioButton_Checked"
                FontFamily="{StaticResource Font}">
                Weiler–Atherton О(n*m)
            </RadioButton>
        </StackPanel>

        <Button
            x:Name="DrawPolygonsButton"
            Padding="4"
            FontFamily="{StaticResource Font}"
            Margin="4 5 4 5">Нарисовать полигон</Button>
        <Button
            x:Name="NextPolygonsButton"
            Padding="4"
            FontFamily="{StaticResource Font}"
            Margin="4 5 4 5">Пример пересечения двух произвольных
        </Button>
        <Button
            x:Name="InfoAboutPolygonsButton"
            Padding="4"
            FontFamily="{StaticResource Font}"
            Margin="4 5 4 5">Списки координат полигонов</Button>
        <Button
            x:Name="FindIntersectionButton"
            Padding="4"
            FontFamily="{StaticResource Font}"
            Margin="4 5 4 5">Найти пересечение(первых двух)</Button>
    </StackPanel>
</UserControl>
