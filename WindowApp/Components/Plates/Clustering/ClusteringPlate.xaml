<UserControl x:Class="WindowApp.Components.Plates.ClusteringPlate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowApp.Components.Plates"
             xmlns:vm="clr-namespace:WindowApp.Components.Plates.Clustering"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             d:Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="./../../../SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style
                TargetType="TextBlock">
                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />
            </Style>

            <Style
                TargetType="TextBox">
                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />
            </Style>

            <Style
                TargetType="Button">
                <Setter
                    Property="Margin"
                    Value="4 5 4 5" />

                <Setter
                    Property="Padding"
                    Value="4" />

                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />

                <Setter
                    Property="Background"
                    Value="{StaticResource PrimaryColor}" />
            </Style>

            <Style
                TargetType="RadioButton">
                <Setter
                    Property="Margin"
                    Value="8" />

                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Background"
                    Value="{StaticResource PrimaryColor}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:ClusteringViewModel />
    </UserControl.DataContext>

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="180" />
                <ColumnDefinition
                    Width="40" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock
                TextAlignment="Center"
                FontFamily="{StaticResource Font}"
                VerticalAlignment="Center">
                Количество кластеров
            </TextBlock>

            <Border
                Grid.Column="1">
                <TextBox
                    Height="28"
                    Padding="0 0 0 0"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Text="{Binding ClusterCount}"
                    Background="{StaticResource PrimaryColor}"></TextBox>
            </Border>

            <Button
                Grid.Column="2"
                x:Name="ClusteringButton">Построить кластера</Button>
        </Grid>

        <Border 
            Style="{StaticResource Border}" />

        <Button
            x:Name="DrawPointsButton">
            Нарисовать облако точек
        </Button>

        <Border
            Style="{StaticResource Border}" />

        <TextBlock
            HorizontalAlignment="Center"
            FontSize="14">
            Метрика
        </TextBlock>
        
        <Border
            Style="{StaticResource Border}" />

        <RadioButton
            GroupName="MetricGroup"
            IsChecked="True"
            Checked="RadioButton_Checked"
            DataContext="0">
            <TextBlock>
                Евклидова
            </TextBlock>
        </RadioButton>
        <RadioButton
            GroupName="MetricGroup"
            Checked="RadioButton_Checked"
            DataContext="1">
            <TextBlock>
                Чебышева
            </TextBlock>
        </RadioButton>
        <RadioButton
            GroupName="MetricGroup"
            Checked="RadioButton_Checked"
            DataContext="2">
            <TextBlock>
                Косинусная
            </TextBlock>
        </RadioButton>

        <Border
            Style="{StaticResource Border}" />

        <Button
            x:Name="DrawConvexHullButton">
            Выпуклые оболочки на кластерах
        </Button>

        <Button
            x:Name="DrawRectangularHullButton">
            Прямоугольный оболочки на кластерах
        </Button>

        <Button
            x:Name="DrawEllipsesHullButton">
            Эллипсоидные оболочки на кластерах
        </Button>

        <Border Style="{StaticResource Border}" />

    </StackPanel>
</UserControl>
