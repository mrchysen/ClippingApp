<UserControl x:Class="WindowApp.Components.Plates.HullsPlate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:WindowApp.Components.Plates.Hulls"
             xmlns:local="clr-namespace:WindowApp.Components.Plates"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="./../../../SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style
                TargetType="TextBlock">
                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />
            </Style>

            <Style
                TargetType="TextBox">
                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />

                <Setter
                    Property="Background"
                    Value="{StaticResource PrimaryColor}" />
            </Style>

            <Style
                TargetType="Button">
                <Setter
                    Property="Margin"
                    Value="4 5 4 5" />

                <Setter
                    Property="Padding"
                    Value="4" />

                <Setter
                    Property="FontFamily"
                    Value="{StaticResource Font}" />

                <Setter
                    Property="Foreground"
                    Value="{StaticResource FontColor}" />

                <Setter
                    Property="Background"
                    Value="{StaticResource PrimaryColor}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:HullsViewModel />
    </UserControl.DataContext>
    
    <StackPanel>

        <StackPanel>
            <TextBlock
                Padding="5">
                Выпуклая оболочка
            </TextBlock>
            
            <Border Style="{StaticResource Border}" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="180" />
                    <ColumnDefinition
                        Width="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    TextAlignment="Center"
                    VerticalAlignment="Center">Количество точек</TextBlock>

                <Border
                    Grid.Column="1">
                    <TextBox
                        Height="28"
                        Padding="0 0 0 0"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Text="{Binding PointCount}"></TextBox>
                </Border>

                <Button
                    Grid.Column="2"
                    x:Name="BuildConvexHullButton"
                    Padding="4"
                    FontFamily="{StaticResource Font}"
                    Margin="4 5 4 5">Построить выпуклую оболочку</Button>
            </Grid>

            <Border
                Style="{StaticResource Border}" />
        </StackPanel>

        <!-- Non convex hull -->

        <StackPanel>
            <TextBlock
                Padding="5">
                Невыпуклая оболочка
            </TextBlock>
            
            <Border Style="{StaticResource Border}"/>

            <Grid
                Margin="0 4 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="180" />
                    <ColumnDefinition
                        Width="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    TextAlignment="Center"
                    VerticalAlignment="Center">Количество точек</TextBlock>

                <TextBox
                    Height="28"
                    Grid.Column="1"
                    Padding="0 0 0 0"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Text="{Binding PointCount}"></TextBox>

                <TextBlock
                    Grid.Row="1"
                    TextAlignment="Center"
                    VerticalAlignment="Center">Параметр</TextBlock>

                <TextBox
                    Grid.Column="1"
                    Grid.Row="1"
                    Height="28"
                    Padding="0 0 0 0"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Text="{Binding NonconvexParameter}"></TextBox>

                <Button
                    Grid.Column="2"
                    Grid.Row="0"
                    x:Name="BuildNonconvexHullButton">Применить невыпуклую оболочку</Button>

                <Button
                    Grid.Column="2"
                    Grid.Row="1"
                    x:Name="GenerateNonconvexHullButton">Сгенерировать невыпуклую оболочку</Button>
            </Grid>
        </StackPanel>

        <Button
            x:Name="DrawPointsButton">
            Нарисовать облако точек
        </Button>

        <Border
            Style="{StaticResource Border}" />
    </StackPanel>
</UserControl>
